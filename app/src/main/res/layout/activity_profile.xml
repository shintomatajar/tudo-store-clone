<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/activity_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matajarbynesto.orders.ae.matajarbynesto.orders.ui.activities.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/data_layout"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/extra_large_margin"
                    android:paddingTop="@dimen/large_margin"
                    android:paddingBottom="@dimen/large_margin">


                    <TextView
                        android:id="@+id/txt_user_icon"
                        android:layout_width="@dimen/small_thumb_image"
                        android:layout_height="@dimen/small_thumb_image"
                        android:background="@drawable/background_layout_white_circle"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/extra_large_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/extra_large_margin"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/large_text_size" />

                        <TextView
                            android:id="@+id/txt_user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="yourmail@domain.com"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/large_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/large_margin"
                                android:layout_height="@dimen/large_margin"
                                android:src="@drawable/ic_account"
                                android:tint="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/extra_large_margin"

                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_store_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/store_name"
                                    android:textColor="@android:color/black" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.7dp"
                                    android:layout_marginTop="@dimen/medium_margin"
                                    android:background="#93c1c1c9" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/large_margin"
                                android:layout_height="@dimen/large_margin"
                                android:src="@drawable/ic_check"
                                android:tint="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/extra_large_margin"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_tax_reg_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tax_registration_number"
                                    android:textColor="@android:color/black" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.7dp"
                                    android:layout_marginTop="@dimen/medium_margin"
                                    android:background="#93c1c1c9" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/large_margin"
                                android:layout_height="@dimen/large_margin"

                                android:src="@drawable/ic_address"
                                android:tint="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/extra_large_margin"

                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/address"
                                    android:textColor="@android:color/black" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.7dp"
                                    android:layout_marginTop="@dimen/medium_margin"
                                    android:background="#93c1c1c9" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/large_margin"
                                android:layout_height="@dimen/large_margin"

                                android:src="@drawable/ic_location"
                                android:tint="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/extra_large_margin"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_emirate"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/location"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/large_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:onClick="onClickManageAddress"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/large_margin"
                                android:layout_height="@dimen/large_margin"

                                android:src="@drawable/ic_address" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/extra_large_margin"

                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/manage_addresses"
                                    android:textColor="@android:color/black" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.7dp"
                                    android:layout_marginTop="@dimen/medium_margin"
                                    android:background="#93c1c1c9" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:onClick="onCLickMyRewards"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/large_margin"
                                android:layout_height="@dimen/large_margin"

                                android:src="@drawable/ic_rewards" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/extra_large_margin"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/my_rewards"
                                    android:textColor="@android:color/black" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.7dp"
                                    android:layout_marginTop="@dimen/small_margin"
                                    android:background="#93c1c1c9" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:onClick="onClickMyCoupons"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/large_margin"
                                android:layout_height="@dimen/large_margin"

                                android:src="@drawable/ic_coupon" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/extra_large_margin"

                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Coupons"
                                    android:textColor="@android:color/black" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.7dp"
                                    android:layout_marginTop="@dimen/small_margin"
                                    android:background="#93c1c1c9"
                                    android:visibility="invisible" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/large_margin">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/medium_margin"
                            android:src="@drawable/ic_smartphone" />

                        <TextView
                            android:id="@+id/txt_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/extra_large_margin"
                            android:layout_weight="1"
                            android:text="Phone Number"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/btn_edit_phone"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:onClick="onClickEditPhone"
                            android:padding="@dimen/very_small_margin"
                            android:src="@drawable/ic_edit"
                            android:visibility="gone" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    android:orientation="vertical"
                    android:padding="@dimen/large_margin">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickSettings"
                        android:text="@string/settings"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:onClick="onClickLegal"
                        android:text="@string/legal"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:onClick="onClickPrivacyPolicy"
                        android:text="@string/privacy_policy"
                        android:textColor="@android:color/black" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:onClick="onClickHelpCenter"
                        android:text="@string/help_centre"
                        android:textColor="@android:color/black"
                        tools:ignore="OnClick" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:onClick="onClickFeedbacks"
                        android:text="@string/app_feedback"
                        android:textColor="@android:color/black"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:onClick="onClickFaq"
                        android:text="@string/faq"
                        android:textColor="@android:color/black"
                        android:visibility="gone" />


                </LinearLayout>

                <TextView
                    android:id="@+id/txt_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/medium_text_size" />

                <Button
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    android:layout_marginBottom="@dimen/medium_margin"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="onClickLogout"
                    android:text="@string/logout"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <include
        layout="@layout/layout_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        layout="@layout/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>
