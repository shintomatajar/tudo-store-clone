<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_marginStart="@dimen/medium_margin"
    android:layout_marginEnd="@dimen/medium_margin"
    android:layout_marginTop="@dimen/medium_margin"
    app:cardElevation="0dp"
    android:id="@+id/main_layout">
    <LinearLayout
        android:padding="@dimen/medium_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="@dimen/small_margin"
        android:clipToPadding="true"
        android:background="@drawable/recycler_background">
        <ImageView
            android:visibility="gone"
            android:id="@+id/order_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_app_logo"
            android:padding="@dimen/medium_margin"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qty_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="0"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/delivery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:background="@drawable/background_express_button"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="5dp"
                android:paddingTop="3dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:text="Express"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/text_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#M123ABCD09"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#000"
                android:padding="3dp"
                android:textSize="@dimen/normal_text_size" />
            <TextView
                android:textColor="@color/cancelled"
                android:fontFamily="@font/roboto_bold"
                android:padding="3dp"
                android:id="@+id/txt_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon,8 Jul 2020 10:00 AM - 12:00PM"
                android:textSize="@dimen/medium_margin" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="3dp"
                    android:text="Cash on deivery"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/medium_text_size" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_cash_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AED"
                    android:padding="3dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/medium_text_size"/>
                <TextView
                    android:id="@+id/text_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:paddingTop="3dp"
                    android:paddingEnd="3dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/medium_text_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:padding="2dp"/>
                <TextView
                    android:id="@+id/text_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="@dimen/small_text_size"
                    android:padding="3dp"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/text_items_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items"
                    android:textSize="@dimen/small_text_size"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="1dp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:background="@drawable/ic_circle_green"
                    android:id="@+id/img_indicator"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="3dp" />
                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yet to deliver"
                    android:textColor="@color/green"
                    android:textSize="@dimen/small_text_size"
                    android:padding="3dp"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/text_orderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#D50000"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:fontFamily="@font/roboto_bold"
                    android:visibility="visible"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <TextView
                    android:gravity="center"
                    android:id="@+id/textView"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1Hr 30Min"
                    android:textSize="@dimen/small_text_size"
                    android:fontFamily="@font/roboto_regular" />

                <TextView
                    android:visibility="visible"
                    android:paddingRight="@dimen/small_margin"
                    android:paddingLeft="@dimen/small_margin"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/medium_text_size"
                    android:background="@drawable/background_green_button"
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Accept" />

                <TextView
                    android:gravity="center"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="14 Apr 20, 01:01 p.m." />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>